{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "fifth-tower",
  "version": "0.1.0",
  "identifier": "fifth-tower",
  "build": {
    "frontendDist": "../../fifth-tower-project/dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "第五塔灵",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": {
        "img-src": "'self' asset: http://asset.localhost blob: data:",
        "script-src": "'wasm-unsafe-eval'"
      },
      "assetProtocol": {
        "enable": true,
        "scope": {
          "allow": ["$APPDATA/resource/**"]
        }
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
